<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAEC"
    tools:context=".EditJob">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/confirmJobEdit"
        app:layout_constraintStart_toStartOf="@+id/confirmJobEdit"
        app:layout_constraintTop_toBottomOf="@+id/confirmJobEdit"
        app:srcCompat="@drawable/bottom_rectangle_rc" />

    <Button
        android:id="@+id/confirmJobEdit"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/person_menu_frame_controller"
        android:fontFamily="@font/exo_font"
        android:text="CONFIRMARE"
        android:textColor="#FBFAEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/leiText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/exo_font"
        android:text="RON"
        android:textColor="#757575"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/costInput2"
        app:layout_constraintStart_toEndOf="@+id/costInput2"
        app:layout_constraintTop_toTopOf="@+id/costInput2" />

    <TextView
        android:id="@+id/statusText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/exo_font"
        android:text="neplatit"
        android:textColor="#757575"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/costInput2"
        app:layout_constraintStart_toEndOf="@+id/statusButton"
        app:layout_constraintTop_toTopOf="@+id/costInput2" />

    <EditText
        android:id="@+id/costInput2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/person_menu_frame"
        android:ems="10"
        android:fontFamily="@font/exo_font"
        android:hint="Cost"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#FBFAEC"
        android:textColorHint="#757575"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/detailsInput2"
        app:layout_constraintTop_toBottomOf="@+id/detailsInput2"
        tools:paddingRight="20dp" />

    <EditText
        android:id="@+id/detailsInput2"
        android:layout_width="310dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/person_menu_frame"
        android:ems="10"
        android:fontFamily="@font/exo_font"
        android:gravity="start|top"
        android:hint="Detalii lucrare"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="#FBFAEC"
        android:textColorHint="#757575"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/jobIconHolder"
        app:layout_constraintTop_toBottomOf="@+id/jobIconHolder" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobIconHolder"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/person_menu_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthInput2">

        <ImageView
            android:id="@+id/addBrakeIcon2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_brake_black" />

        <ImageView
            android:id="@+id/addEngineButton2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addBrakeIcon2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_engine_black" />

        <ImageView
            android:id="@+id/addSuspensionButton2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addEngineButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_suspension_black" />

        <ImageView
            android:id="@+id/addOtherButton2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addSuspensionButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_others_black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/dayInput2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/person_menu_frame"
        android:ems="10"
        android:fontFamily="@font/exo_font"
        android:hint="Ziua"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#FBFAEC"
        android:textColorHint="#757575"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/jobIconHolder"
        app:layout_constraintTop_toTopOf="@+id/monthInput2"
        tools:paddingRight="20dp" />

    <EditText
        android:id="@+id/monthInput2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/person_menu_frame"
        android:ems="10"
        android:fontFamily="@font/exo_font"
        android:hint="Luna"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#FBFAEC"
        android:textColorHint="#757575"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/yearInput2"
        app:layout_constraintStart_toEndOf="@+id/dayInput2"
        app:layout_constraintTop_toBottomOf="@+id/licenseTarget2"
        tools:paddingRight="20dp" />

    <EditText
        android:id="@+id/yearInput2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/person_menu_frame"
        android:ems="10"
        android:fontFamily="@font/exo_font"
        android:hint="Anul"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#FBFAEC"
        android:textColorHint="#757575"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/jobIconHolder"
        app:layout_constraintTop_toTopOf="@+id/monthInput2"
        tools:paddingRight="20dp" />

    <TextView
        android:id="@+id/licenseTarget2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/exo_font"
        android:text="Editare campuri"
        android:textColor="#757575"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:alpha="10"
        android:background="#373737"
        android:backgroundTint="#373737"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appTitle8">

    </LinearLayout>

    <Button
        android:id="@+id/backButton7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/ic_back_controller"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView23" />

    <TextView
        android:id="@+id/appTitle8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/prototype_font"
        android:text="Toolbox"
        android:textColor="#373737"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="47dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/appTitle8"
        app:layout_constraintEnd_toStartOf="@+id/appTitle8"
        app:layout_constraintTop_toTopOf="@+id/appTitle8"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/ic_toolbox" />

    <ImageView
        android:id="@+id/statusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/costInput2"
        app:layout_constraintStart_toEndOf="@+id/leiText2"
        app:layout_constraintTop_toTopOf="@+id/costInput2"
        app:srcCompat="@drawable/ic_cash" />
</androidx.constraintlayout.widget.ConstraintLayout>